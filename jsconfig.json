{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "src",
        "**/src/*",
        "types",
        "**/types/*",
        "scripts",
        "**/scripts/*",
        "dist",
        "**/dist/*",
        "config",
        "**/config/*",
        ".github",
        "**/.github/*"
    ]
}